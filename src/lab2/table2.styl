@import "template.styl"

body
  background-color #f5f5f5
  .wrapper
    width 100%
    display flex
    margin-top 3rem
    flex-direction column
    header
      background-color white
      margin auto
      max-width 40rem
      padding 1rem 5rem
      display flex
      flex-direction column
      align-items center

    main
      background-color white
      margin 2rem auto
      max-width 60rem
      padding 1rem 4rem 3rem
      display flex
      flex-direction column
      align-items center
      table
        tr
          td,th
            text-align center
            padding 0.5rem 2rem
            &.gray
              background-color #c6c6c6
